@model ProjetoPortifolio.ViewModel.ParametrosPaginacaoViewModel

@{
    Layout = null;
    @using X.PagedList.Mvc.Core;
}

@if (Model.imagens != null)
{
    @Html.PagedListPager(Model.imagens, pagina => Url.Action("ChamaViewDinamica", "Portifolio", new {nomeTela = Model.dadosPagina.nome_pagina, pagina = pagina }),
    new X.PagedList.Mvc.Common.PagedListRenderOptionsBase
    {
        UlElementClasses = new string[] {"pagination pagination-lg" },
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }

    });
}