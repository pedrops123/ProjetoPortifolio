            <p class="card-text">@Html.Raw(foto.descricaoProjeto)</p>
            <a id="btn_visit" data-placement="top" data-toggle="tooltip" title="Abrir Galeria de Fotos" class="tip-top btn btn-primary" href="@("/Portifolio/pagina/1/"+foto.idTela)"><span class="fas fa-camera"></span> &nbsp; Galeria de Fotos</a>
        </div>
    </div>



